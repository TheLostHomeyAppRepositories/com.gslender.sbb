{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.gslender.sbb",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#2f0fbb",
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Smart By Bond"
  },
  "description": {
    "en": "Connect your Smart By Bond ceiling fans"
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png"
  },
  "author": {
    "name": "Grant Slender",
    "email": "gslender@gmail.com"
  },
  "source": "https://github.com/gslender/com.gslender.sbb",
  "bugs": {
    "url": "https://github.com/gslender/com.gslender.sbb/issues"
  },
  "api": {
    "checkStatus": {
      "method": "get",
      "path": "/checkStatus"
    }
  },
  "drivers": [
    {
      "name": {
        "en": "Fan"
      },
      "energy": {
        "approximation": {
          "usageOn": 2000,
          "usageOff": 1
        }
      },
      "class": "fan",
      "capabilities": [
        "fan_mode",
        "onoff"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "discovery": "bond",
      "images": {
        "small": "/drivers/fan/assets/images/small.png",
        "large": "/drivers/fan/assets/images/large.png"
      },
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "id": "fan"
    }
  ],
  "capabilities": {
    "fan_mode": {
      "type": "enum",
      "values": [
        {
          "id": "off",
          "title": {
            "en": "Off"
          }
        },
        {
          "id": "low",
          "title": {
            "en": "Low"
          }
        },
        {
          "id": "medium",
          "title": {
            "en": "Medium"
          }
        },
        {
          "id": "high",
          "title": {
            "en": "High"
          }
        }
      ],
      "title": {
        "en": "Fan Speed"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "picker",
      "uiQuickAction": true
    }
  },
  "discovery": {
    "bond": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "_bond",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}"
    }
  }
}